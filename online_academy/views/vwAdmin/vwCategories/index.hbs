<div class="card">
  <h5 class="card-header d-flex justify-content-between">
    Categories
    {{!-- <a class="btn btn-outline-dark" href="/admin/categories/add" role="button">
      <i class="fa fa-plus" aria-hidden="true"></i>
      Add Category
    </a> --}}
  </h5>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-text">Không có dữ liệu.</p>
  </div>
  {{else}}
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Category</th>
          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.categories}}
        <tr>
          <th scope="row">{{CategoryID}}</th>
          <td>{{CategoryName}}</td>
          <td class="text-right">
            <div class="text-secondary">
                <i class="fas fa-pencil-alt"></i>
            </div>
            {{!-- <a class="btn btn-sm btn-secondary" href="/admin/categories/{CategoryID}" role="button" title="Edit Category">
              <i class="fas fa-pencil-alt"></i>
            </a> --}}
            
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{/if}}
  {{!-- <div class="card-footer text-muted">
    Footer
  </div> --}}
</div>